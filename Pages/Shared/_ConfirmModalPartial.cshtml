@using Models
@model ConfirmModal

<form class="form-inline" asp-area="@Model.Area" asp-page="@Model.Page" asp-page-handler="@Model.Handler" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
  <div class="modal"  id="@Model.Target" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">@Model.Title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>@Model.Content</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
          <button type="submit" class="btn btn-primary">Xác nhận</button>
        </div>
      </div>
    </div>
  </div>
</form>
@page "/admin/roles"
@model App.Admin.Role.IndexModel
@{
    ViewData["Title"] = "Danh sách các vai trò (role)";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"/>

<div class="mb-2">
    <a class="btn btn-primary" asp-page="./Create">Tạo mới vai trò</a>
</div>

<table class="table">
    <tr>
        <th>Tên vai trò</th>
        <th>Tác vụ</th>
    </tr>
    @foreach (var role in Model.roles)
    {
        <tr>
            <td>
                @role.Name
                <br>
                @foreach (var claim in @role.Claims)
                {
                    <small>- @claim</small><br>
                }    
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-roleId="@role.Id">Cập nhật</a>
                <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-roleId="@role.Id">Xóa</a>
            </td>
        </tr>
    }
</table>